{
  "name":            "${packageDetails.name}",
  "description":     "${packageDetails.description}",
  "version":         "${version}",
  "license":         "${properties.license}",
  "repository":      "${properties.repository}",

  "dependencies":    {
    "react":     "16.14.0",
    "react-dom": "16.14.0"
  },
  "devDependencies": {
    "typescript":                  "^4.1.5",
    "@testing-library/jest-dom":   "^5.11.6",
    "@types/jest":                 "^26.0.15",
    "@types/node":                 "^14.14.9",
    "jest":                        "29.5.0",
    "ts-jest":                     "29.1.0"
  },
  "keywords":        [
    "react",
    "runbook"
  ],
  "main":            "dist/index",
  "types":           "dist/index",
  "scripts":         {
    "test": "jest --config jest.config.json --env node"
  },
  "eslintConfig":    {
    "extends":   [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  }
}
