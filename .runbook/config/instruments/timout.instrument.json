{
  "instrument": {
    "delay": {
      "type":        "script",
      "description": "Delay for a number of seconds",
      "params":      {"delay": { "description": "How many seconds to delay "}},
      "staleness":   5000,
      "cost":        "low",
      "format":      {"type": "table", "headers": ["file"]},
      "windows":     {
        "script": "ping 127.0.0.1 -n {delay}",
        "format": {"type": "table", "headers": ["file"]}
      },
      "linux":       {
        "script": "sleep 5s",
        "format": {
          "type": "table", "headers": ["notdoneyet"]
        }
      }
    }
  }
}