{
  "instrument": {
    "ping": {
      "type":        "script",
      "description": "pings a server",
      "params":      {"domain": { "description": "The domain name to ping"}},
      "staleness":   5000,
      "cost":        "low",

      "windows":     {
        "script": "ping -n 5 {domain}",
        "format":      "exitcode==0"
      },
      "linux":       {
        "script": "ping -c 5 {domain}",
        "format":      "exitcode==0"
      }
    }
  }
}