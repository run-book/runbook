{
  "instrument": {
    "ls": {
      "type":        "script",
      "description": "pings a server",
      "params":      {"domain": { "description": "The domain name to ping"}},
      "staleness":   5000,
      "cost":        "low",
      "format":      {"type": "table", "headers": ["file"]},
      "windows":     {
        "script": "dir /b {dir}",
        "format": {"type": "table", "headers": ["file"]}
      },
      "linux":       {
        "script": "ls -l {dir}",
        "format": {
          "type": "table", "headers": ["notdoneyet"]
        }
      }
    }
  }
}